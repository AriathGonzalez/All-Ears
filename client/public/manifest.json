{
  "manifest_version": 3,
  "name": "All Ears",
  "version": "1.0",
  "permissions": ["storage", "sidePanel", "activeTab", "tabCapture"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Click to open panel"
  }
}
